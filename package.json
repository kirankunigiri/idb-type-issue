{
	"name": "cleave",
	"private": true,
	"type": "module",
	"workspaces": [
		"shared",
		"app"
	],
	"scripts": {
		"dev": "bun --filter '*' dev",
		"dev:app": "cd app && bun dev",
		"dev:server": "cd server && bun dev",
		"reset-node": "rm -rf node_modules && rm -rf app/node_modules && rm -rf server/node_modules && bun i"
	},
